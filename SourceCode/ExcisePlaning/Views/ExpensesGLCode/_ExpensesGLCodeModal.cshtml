<md-dialog flex="98" flex-gt-sm="70">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>กำหนด หมวดค่าตอบแทน ใช้สอยและวัสดุ</h2>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div class="md-dialog-content">
            <div class="form-row">
                <div class="form-group col-12 col-md-4">
                    <label>รายการค่าใช้จ่ายต่างๆ</label>
                    <select class="form-control" ng-model="$settings.formData.ExpensesID"  ng-disabled="$settings.isLoading" fw-select2>
                        <option value="empty">--- รายการค่าใช้จ่ายต่างๆ ---</option>
                        @foreach (var ExpensesItem in ViewBag.ExpensesItem)
                        {
                            <option value="@ExpensesItem.EXPENSES_ID">@ExpensesItem.EXPENSES_NAME</option>
                        }
                    </select>
                </div>
                <div class="form-group col-12 col-md-2">
                    <label>รหัส GL</label>
                    <div class="input-group">
                        <input type="text" class="form-control" ng-model="$settings.formData.GLCode" />
                    </div>
                </div>
                <div class="form-group col-12 col-md-3">
                    <label>รายละเอียด GL</label>
                    <div class="input-group">
                        <input type="text" class="form-control" ng-model="$settings.formData.GLText" />
                    </div>
                </div>
            </div>
        </div>
    </md-dialog-content>
    <md-dialog-actions layout="row">
        <span flex></span>
        <fw-execute-button text="บันทึก" css-class="btn btn-primary btn-sm mr-2"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ti-save"
                           ng-click="save($event)"></fw-execute-button>
        <fw-execute-button text="ปิดหน้าต่าง" css-class="btn btn-danger btn-sm"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ion-close-round"
                           ng-click="close()"></fw-execute-button>
    </md-dialog-actions>
</md-dialog>

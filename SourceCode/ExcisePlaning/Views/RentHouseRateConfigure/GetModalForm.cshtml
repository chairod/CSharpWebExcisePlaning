<md-dialog flex="98" flex-gt-sm="45">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>ฟอร์มกำหนดอัตราค่าเช่าบ้าน</h2>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div class="md-dialog-content">
            <div class="row">
                <div class="col-12 col-md-6 border-right">
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label class="required-field">ระดับ C ของบุลคลากร<fw-validate-error-output css-class="ml-1" error-messages="$settings.formErrors.LevelId.ErrorMessages"></fw-validate-error-output></label>
                            <select class="form-control" ng-model="$settings.formData.LevelId" ng-disabled="$settings.isLoading||$settings.isEdit" fw-select2>
                                <option value="empty">--- ระดับ C ของบุลคลากร ---</option>
                                @foreach (var LevelID in ViewBag.LevelID)
                                {
                                    <option value="@LevelID.LEVEL_ID">@LevelID.LEVEL_NAME</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-12">
                            <label class="required-field">เงินเดือน (เริ่มต้น)<fw-validate-error-output css-class="ml-1" error-messages="$settings.formErrors.FromSalary.ErrorMessages"></fw-validate-error-output></label>
                            <fw-input-number-mask ng-model="$settings.formData.FromSalary" css-class="text-right"
                                                  min-value="0.00" max-value="999999999.99" placeholder="เงินเดือน (บาท)"
                                                  ng-disabled="$settings.isLoading||$settings.isEdit"></fw-input-number-mask>
                        </div>
                        <div class="form-group col-12">
                            <label class="required-field">เงินเดือน (สิ้นสุด)<fw-validate-error-output css-class="ml-1" error-messages="$settings.formErrors.ToSalary.ErrorMessages"></fw-validate-error-output></label>
                            <fw-input-number-mask ng-model="$settings.formData.ToSalary" css-class="text-right"
                                                  min-value="0.00" max-value="999999999.99" placeholder="เงินเดือน (บาท)"
                                                  ng-disabled="$settings.isLoading||$settings.isEdit"></fw-input-number-mask>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label class="required-field">อัตราค่าเช่า (บาท)<fw-validate-error-output css-class="ml-1" error-messages="$settings.formErrors.RateAmount.ErrorMessages"></fw-validate-error-output></label>
                            <fw-input-number-mask ng-model="$settings.formData.RateAmount" css-class="text-right"
                                                  min-value="0.00" max-value="999999999.99" placeholder="อัตราค่าเช่า (บาท)"
                                                  ng-disabled="$settings.isLoading"></fw-input-number-mask>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </md-dialog-content>
    <md-dialog-actions layout="row">
        <span flex></span>
        <fw-execute-button text="บันทึก" css-class="btn btn-primary btn-sm mr-2"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ti-save"
                           ng-click="save($event)"></fw-execute-button>
        <fw-execute-button text="ปิดหน้าต่าง" css-class="btn btn-danger btn-sm"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ion-close-round"
                           ng-click="close()"></fw-execute-button>
    </md-dialog-actions>
</md-dialog>

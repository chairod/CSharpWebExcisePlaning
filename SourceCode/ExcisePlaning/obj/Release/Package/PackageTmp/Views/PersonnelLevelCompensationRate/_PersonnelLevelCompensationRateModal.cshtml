<md-dialog flex="98" flex-gt-sm="70">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>กำหนดอัตราค่าเช่าประเภทต่างๆ ที่อ้างอิงช่วงของเงินเดือนเป็นหลัก</h2>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div class="md-dialog-content">
            <div class="form-row">
                <div class="form-group col-12 col-md-4">
                    <label>ประเภทค่าตอบแทน</label>
                    <select class="form-control" ng-model="$settings.formData.CompensationTypeID" ng-disabled="$settings.isLoading" fw-select2>
                        <option value="empty">--- ประเภทค่าตอบแทน ---</option>
                        @foreach (var CompensationType in ViewBag.CompensationType)
                        {
                            <option value="@CompensationType.COMPENSATION_TYPE_ID">@CompensationType.COMPENSATION_TYPE_NAME</option>
                        }
                    </select>
                </div>
                <div class="form-group col-12 col-md-4">
                    <label>ระดับของบุลคลากร</label>
                    <select class="form-control" ng-model="$settings.formData.LevelID" ng-disabled="$settings.isLoading" fw-select2>
                        <option value="empty">--- ระดับของบุลคลากร ---</option>
                        @foreach (var LevelID in ViewBag.LevelID)
                        {
                            <option value="@LevelID.LEVEL_ID">@LevelID.LEVEL_NAME</option>
                        }
                    </select>
                </div>
                
            </div>
            <div class="form-row">
                <div class="form-group col-12 col-md-4">
                    <label>ค่าตอบแทนที่จะให้กับแต่ละระดับของบุคลากร</label>
                    <fw-input-number-mask ng-model="$settings.formData.RateAmount" css-class="text-right"
                                          disabled="$settings.isLoading"></fw-input-number-mask>
                </div>

                <div class="form-group col-12 col-md-4">
                    <label>การให้ค่าตอบแทน</label>
                    <select class="form-control" ng-model="$settings.formData.RateType" ng-disabled="$settings.isLoading" fw-select2>
                        <option value="null">  </option>
                        <option value="1">ต่อเดือน</option>
                        <option value="2">ต่อ ชม.</option>
                        <option value="3">ต่อ วัน</option>
                    </select>
                </div>
            </div>
        </div>
    </md-dialog-content>
    <md-dialog-actions layout="row">
        <span flex></span>
        <fw-execute-button text="บันทึก" css-class="btn btn-primary btn-sm mr-2"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ti-save"
                           ng-click="save($event)"></fw-execute-button>
        <fw-execute-button text="ปิดหน้าต่าง" css-class="btn btn-danger btn-sm"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ion-close-round"
                           ng-click="close()"></fw-execute-button>
    </md-dialog-actions>
</md-dialog>

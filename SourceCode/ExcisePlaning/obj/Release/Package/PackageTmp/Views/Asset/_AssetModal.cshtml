<md-dialog flex="98" flex-gt-sm="70">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>กำหนด ข้อมูลสินทรัพย์</h2>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div class="md-dialog-content">
            <div class="form-row">
                <div class="form-group col-12 col-md-4">
                    <label class="required-field">ข้อมูลสินทรัพย์<fw-validate-error-output error-messages="$settings.formError.BudgetTypeName.ErrorMessages" css-class="ml-1"></fw-validate-error-output></label>
                    <input type="text" class="form-control" ng-model="$settings.formData.AssetName" ng-disabled="$settings.isLoading" maxlength="100" />

                </div>
                <div class="form-group col-12 col-md-4">
                    <label>ประเภทสินทรัพย์</label>
                    <select class="form-control" ng-model="$settings.formData.AssetType" ng-disabled="$settings.isLoading" fw-select2>
                        <option value="empty">--- ประเภทสินทรัพย์ ---</option>
                        <option value="1">สิ่งก่อสร้าง</option>
                        <option value="2">โฆษณาและเผยแพร่</option>
                        <option value="3">วัสดุสำนักงาน</option>
                        <option value="4">วัสดุไฟฟ้าและวิทยุ</option>
                        <option value="5">เครื่องมือวิทยาศาสตร์หรือเครื่องมือแพทย์</option>
                        <option value="6">ครุภัณฑ์คอมพิวเตอร์</option>
                        <option value="7">วัสดุยานพาหนะและขนส่ง</option>
                        <option value="8">อื่นๆ</option>
                    </select>
                </div>

            </div>
        </div>
    </md-dialog-content>
    <md-dialog-actions layout="row">
        <span flex></span>
        <fw-execute-button text="บันทึก" css-class="btn btn-primary btn-sm mr-2"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ti-save"
                           ng-click="save($event)"></fw-execute-button>
        <fw-execute-button text="ปิดหน้าต่าง" css-class="btn btn-danger btn-sm"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ion-close-round"
                           ng-click="close()"></fw-execute-button>
    </md-dialog-actions>
</md-dialog>

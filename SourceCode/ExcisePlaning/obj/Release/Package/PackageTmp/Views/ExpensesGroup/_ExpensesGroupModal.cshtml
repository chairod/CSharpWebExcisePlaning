<md-dialog flex="98" flex-gt-sm="70">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>กำหนดหมวดค่าใช้จ่าย</h2>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div class="md-dialog-content">
            <div class="form-row">
                <div class="form-group col-12 col-md-3">
                    <label class="require-field">งบรายจ่าย<fw-validate-error-output error-messages="$settings.formError.BudgetTypeId.ErrorMessages" css-class="ml-1"></fw-validate-error-output></label>
                    <select class="form-control" ng-model="$settings.formData.BudgetTypeId" ng-disabled="$settings.isLoading" fw-select2>
                        <option value="empty">--- งบรายจ่าย ---</option>
                        @foreach (var BudgetTypex in ViewBag.BudgetType)
                        {
                            <option value="@BudgetTypex.BUDGET_TYPE_ID">@BudgetTypex.BUDGET_TYPE_NAME</option>
                        }
                    </select>
                </div>
                <div class="form-group col-12 col-md-3">
                    <label>กลุ่มหมวด คชจ.</label>
                    <select class="form-control" ng-model="$settings.formData.ExpensesMasterID" ng-disabled="$settings.isLoading" fw-select2>
                        <option value="empty">--- กลุ่มหมวด คชจ. ---</option>
                        @foreach (var ExpensesMaster in ViewBag.ExpensesMaster)
                        {
                            <option value="@ExpensesMaster.EXPENSES_MASTER_ID">@ExpensesMaster.EXPENSES_MASTER_NAME</option>
                        }
                    </select>
                </div>
                <div class="form-group col-12 col-md-4">
                    <label class="require-field">หมวดค่าใช้จ่าย<fw-validate-error-output error-messages="$settings.formError.ExpensesGroupName.ErrorMessages" css-class="ml-1"></fw-validate-error-output></label>
                    <div class="input-group">
                        <input type="text" class="form-control" ng-model="$settings.formData.ExpensesGroupName" />
                    </div>
                </div>

            </div>
        </div>
    </md-dialog-content>
    <md-dialog-actions layout="row">
        <span flex></span>
        <fw-execute-button text="บันทึก" css-class="btn btn-primary btn-sm mr-2"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ti-save"
                           ng-click="save($event)"></fw-execute-button>
        <fw-execute-button text="ปิดหน้าต่าง" css-class="btn btn-danger btn-sm"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ion-close-round"
                           ng-click="close()"></fw-execute-button>
    </md-dialog-actions>
</md-dialog>

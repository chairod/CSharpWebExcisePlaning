        binding="basicHttpBinding" bindingConfiguration="LDPAGAuthenAndGetUserRoleBinding"
        contract="ServiceReference1.LDPAGAuthenAndGetUserRolePortType"
        name="LDPAGAuthenAndGetUserRolePort" />
    </client>
  </system.serviceModel>
</configuration>

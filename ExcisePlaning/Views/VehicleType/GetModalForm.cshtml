<md-dialog flex="98" flex-gt-sm="25">
    <md-toolbar>
        <div class="md-toolbar-tools">
            <h2>ฟอร์มกำหนดประเภทยานพาหนะ</h2>
        </div>
    </md-toolbar>
    <md-dialog-content>
        <div class="md-dialog-content">
            <div class="form-row">
                <div class="form-group col-12">
                    <label class="required-field">ชื่อประเภทยานหนะ<fw-validate-error-output css-class="ml-1" error-messages="$settings.formErrors.VehicleName.ErrorMessages"></fw-validate-error-output></label>
                    <div class="input-group">
                        <input type="text" class="form-control" ng-model="$settings.formData.VehicleName" />
                    </div>
                </div>
                <div class="form-group col-12">
                    <label class="required-field">อัตรา (บาท)<fw-validate-error-output css-class="ml-1" error-messages="$settings.formErrors.CompensationPrice.ErrorMessages"></fw-validate-error-output></label>
                    <fw-input-number-mask ng-model="$settings.formData.CompensationPrice" 
                                          min-value="0.00" max-value="99999999.99"
                                          css-class="text-right" placeholder="จำนวนเงิน (บาท)"
                                          ng-disabled="$settings.isLoading"></fw-input-number-mask>
                    <span class="text-danger f-12">อัตรา (บาท) ที่ให้กับบุคลากรกรณีใช้บริการยานพาหนะประเภทนี้</span>
                </div>

            </div>
        </div>
    </md-dialog-content>
    <md-dialog-actions layout="row">
        <span flex></span>
        <fw-execute-button text="บันทึก" css-class="btn btn-primary btn-sm mr-2"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ti-save"
                           ng-click="save($event)"></fw-execute-button>
        <fw-execute-button text="ปิดหน้าต่าง" css-class="btn btn-danger btn-sm"
                           ng-disabled="$settings.isLoading"
                           css-icon-class="ion-close-round"
                           ng-click="close()"></fw-execute-button>
    </md-dialog-actions>
</md-dialog>

<div class="row m-b-20">
    <div class="col-md-12">
        <div class="text-center">
            <img src="@Href("~/Third_Party/assets/images/avatar-2.png")" class="img img-fluid" alt="avatar-2.png">
            <h3><span class="text-white">LOG IN</span></h3>
        </div>
    </div>
</div>
<hr />
<div class="input-group">
    <div class="input-group-prepend"><span class="input-group-text ti-user"></span></div>
    <input type="email" class="form-control" name="emailAddress" placeholder="Your Email Address">
    <span class="md-line"></span>
</div>
<div class="input-group mt-3">
    <div class="input-group-prepend"><span class="input-group-text ti-lock"></span></div>
    <input type="password" name="password" class="form-control" placeholder="Password">
    <span class="md-line"></span>
</div>
<div class="row m-t-25 text-left">
    <div class="col-sm-7 col-xs-12">
        <div class="checkbox-fade fade-in-primary">
            <label>
                <input type="checkbox" name="rememberMe" value="">
                <span class="cr" style="border-color:#fff;"><i class="cr-icon icofont icofont-ui-check" style="color:#fff;"></i></span>
                <span class="text-white">Remember me</span>
            </label>
        </div>
    </div>
    <div class="col-sm-5 col-xs-12 forgot-phone text-right">
        <a href="#" class="text-right f-w-600 text-white"> Forgot Password?</a>
    </div>
</div>
<div class="row m-t-15">
    <div class="col-md-12">
        <button type="submit" class="btn bg-white f-w-900 btn-md btn-block waves-effect text-center m-b-20"><span class="f-22" style="color:#0B59BE;">Login</span></button>
    </div>
</div>
